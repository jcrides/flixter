<!DOCTYPE html>
<html>
<head>
  <title>CourseWorx</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="http://vjs.zencdn.net/4.6/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/4.6/video.js"></script>
  <style>
    .video-js {padding-top: 56.25%}
    .vjs-fullscreen {padding-top: 0px}
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div id="wrap">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">
          <span class="glyphicon glyphicon-education glyphicon-align-left" aria-hidden="true"></span>
          CourseWorx</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'See All Courses', courses_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to 'My Dashboard', dashboard_path %></li> <!-- user_path(current_user) -->
            <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><%= link_to 'Sign in', new_user_session_path %></li>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <%= yield %>

</div>
<br class="clear">

<div class="footer navbar-fixed-bottom">
  <div class="container">
    <div class="col-xs-12 col-sm-3">
      <b>Teachers</b>
      <br>
      <%= link_to 'Teach a course', new_instructor_course_path, :class => "text-muted" %>
      <br>
      <%= link_to 'My Dashboard', dashboard_path, :class => "text-muted" %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b>About</b>
      <br>
      <%= link_to 'Team', '#', :class => "text-muted" %>
      <br>
      <%= link_to 'Careers', '#', :class => "text-muted" %>
      <br>
      <%= link_to 'Privacy Policy', privacy_path, :class => "text-muted" %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b>Contact</b>
      <br>
      jeremycar@gmail.com
      <br>
      123 Street Rd
      <br>
      Concord, CA 94519
    </div>
    <div class="col-xs-12 col-sm-3">
      <b>Social</b>
      <%= image_tag 'github.png', :class => 'social-button' %>
      <%= image_tag 'facebook.png', :class => 'social-button' %>
      <%= image_tag 'google_plus.png', :class => 'social-button' %>
    </div>
  </div>
</div>

</body>
</html>
